<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.lizec.smartreview.mapper.LinkDao">

    <select id="selectKnowledgeLink" resultType="top.lizec.smartreview.entity.Link">
        SELECT link.name, link.url
        FROM link
                 JOIN knowledge_link kl on link.id = kl.link_id
        WHERE kl.knowledge_id = #{kid}
    </select>
</mapper>